define Selection {
    obj:{},
    constructor : function (obj) {
        this.text = obj.text;
        this.id = obj.id;
        this.rules = obj.rules;   
        this.html = '';
    }        

}
rule Hello {
    
    when {           
        m : Selection m.text =~ /^hello\sworld$/
    }
    then {
        modify(m, function(){              
            this.html = formatSpan(this.id, this.rules, this.text);
            this.text += ' ' + this.rules;
        });
        
        
    }
}